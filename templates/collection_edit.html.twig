{% extends 'base.html.twig' %}
{% block title %}{% trans %}Edit{% endtrans %}{% endblock %}
{% block content %}
{{ form_start(form) }}
<table style="width:100%">
{% if form.name is defined %}
	<tr>
	<td>{{ form_label(form.name,'Title') }}:</td>
	<td>{{ form_widget(form.name,{"attr" : {"style" : "width: 500px", "maxlength" : 255 }}) }}</td>
	</tr>
	<tr>
	<td>{{ form_label(form.language,'Title language') }}:</td>
	<td>{{ form_widget(form.language) }}</td>
	</tr>
{% endif %}
<tr>
<td style="width:200px">{{ form_label(form.notes, 'Notes') }}:</td>
<td>{{ form_widget(form.notes,{"attr" : {"style" : "width: 100%", "rows": 5 }}) }}</td>
</tr>	
<tr>
<td>{{ form_label(form.defaultview, 'Default view') }}:</td>
<td>{{ form_widget(form.defaultview ) }}</td>
</tr>
<tr>
<td>{{ form_label(form.vieworder,'View order') }}:</td>
<td>{{ form_widget(form.vieworder) }}{% trans %}Weight note{% endtrans %}</td>
</tr>
</table>
<table style="width:100%">
<tr>
<td>
{{ form_widget(form.save,{'label': 'Save'}) }}
<a href="{{ path('collections_list') }}">{% trans %}Cancel{% endtrans %}</a>
</td>
<td style="text-align:right">
{% if itemid %}
{{ form_widget(form.delete,{'label': 'Delete',"attr" : {"onclick" : "ConfirmScript" | trans }}) }}
{% endif %}
</td>
</tr>
</table>
{{ form_end(form) }}
{% endblock %}
