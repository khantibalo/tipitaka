{% extends 'base.html.twig' %}
{% block title %}{% trans %}Edit{% endtrans %}{% endblock %}
{% block content %}
{{ form_start(form) }}
<table style="width:100%">
<tr>
<td>NodeID:</td>
<td>{{ url('index') }}node/pali/{{ form_widget(form.nodeid) }}</td>
</tr>
<tr>
<td>{{ form_label(form.limitrows,'Limit rows') }}:</td>
<td>{{ form_widget(form.limitrows,{"attr" : {"style" : "width: 100%", "rows": 3, "maxlength" : 1500  }}) }}</td>
</tr>
<tr>
<td style="width:200px">{{ form_label(form.level,'Level') }}:</td>
<td>{{ form_widget(form.level) }}</td>
</tr>
<tr>
<td>{{ form_label(form.vieworder,'View order') }}:</td>
<td>{{ form_widget(form.vieworder) }}{% trans %}Weight note{% endtrans %}</td>
</tr>
<tr>
<td style="width:200px">{{ form_label(form.notes, 'Notes') }}:</td>
<td>{{ form_widget(form.notes,{"attr" : {"style" : "width: 100%", "rows": 5 }}) }}</td>
</tr>
<tr>
<td style="width:200px">{{ form_label(form.notesBottom, 'NotesBottom') }}:</td>
<td>{{ form_widget(form.notesBottom,{"attr" : {"style" : "width: 100%", "rows": 5 }}) }}</td>
</tr>
<tr>
<td>{{ form_label(form.hidetitleprint,'hide title in print view') }}:</td>
<td>{{ form_widget(form.hidetitleprint) }}</td>
</tr>
<tr>
<td>{{ form_label(form.hidepalinameprint,'hide pali name in print view') }}:</td>
<td>{{ form_widget(form.hidepalinameprint) }}</td>
</tr>	
</table>
<table style="width:100%">
<tr>
<td>
{{ form_widget(form.save,{'label': 'Save'}) }}
<a href="{{ path('collections_list') }}">{% trans %}Cancel{% endtrans %}</a>
</td>
<td style="text-align:right">
{% if itemid %}
{{ form_widget(form.delete,{'label': 'Delete',"attr" : {"onclick" : "ConfirmScript" | trans }}) }}
{% endif %}
</td>
</tr>
</table>
{{ form_end(form) }}
{% endblock %}
